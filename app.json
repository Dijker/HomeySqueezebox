{
    "id": "uk.co.icefusion.squeezebox",
    "name": {
        "en": "Squeezebox"
    },
    "description": {
        "en": "Allows control of Squeezeboxes connected to a Logitech Media Server."
    },
    "version": "0.0.2",
    "compatibility": ">=0.9.2",
    "permissions": [],
    "author": {
        "name": "Mark Tudor",
        "email": "code@icefusion.co.uk"
    },
    "contributors": {
        "developers": [
            {
                "name": "Robin van Kekem",
                "email": "roady1979@gmail.com"
            }
        ]
    },
    "category": "music",
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "dependencies": {
        "squeezenode": "*"
    },
    "drivers": [
        {
            "id": "squeezebox",
            "name": {
                "en": "Squeezebox"
            },
            "images": {
                "large": "./drivers/squeezebox/assets/images/large.jpg",
                "small": "./drivers/squeezebox/assets/images/small.jpg"
            },
            "class": "other",
            "capabilities": [
                "onoff",
                "volume_set"
            ],
            "pair": [
                {
                    "id": "start"
                }
            ],
            "mobile": {
                "components": [ 
					{
						"id":"toggle",
						"capabilities":[
							"onoff"
						]
					}
                ]
            }
        }
    ],
    "flow": {
        "triggers": [
        ],
        "actions": [
            {
                "id": "volume",
                "title": {
                    "en": "Volume"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "placeholder": {
                            "en": "Which Squeezebox?"
                        },
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }, {
                        "name": "volume",
                        "type": "range",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "label": "%"
                    }
                ]
            },
            {
                "id": "play",
                "title": {
                    "en": "Play"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "playPlaylist",
                "title": {
                    "en": "Play Playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }, {
                        "name": "playlist",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "pause",
                "title": {
                    "en": "Pause"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "next",
                "title": {
                    "en": "Next song in playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "previous",
                "title": {
                    "en": "Previous song in playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "seek",
                "title": {
                    "en": "Go to second in current song"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    },
                    {
                        "name": "second",
                        "type": "number",
                        "placeholder" :
                        {
                            "en": "Second to jump to"
                        }
                  }
                ]
            }
        ]
    }
}