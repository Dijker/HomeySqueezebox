{
    "id": "uk.co.icefusion.squeezebox2",
    "version": "0.1.0",
    "compatibility": ">=2.0.0",
    "sdk": 2,
    "name": {
        "en": "Squeezebox2"
    },
    "description": {
        "en": "Allows control of Squeezeboxes connected to a Logitech Media Server."
    },
    "tags": {
      "en": ["squeezebox", "music", "logitech media server", "lms"]
    },
    "author": {
        "name": "Mark Tudor",
        "email": "code@icefusion.co.uk"
    },
    "contributors": {
        "developers": [
            {
                "name": "Robin van Kekem",
                "email": "roady1979@gmail.com"
            }
        ]
    },
    "category": "music",
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "dependencies": {
        "squeezenode": "*",
        "node_ssdp": "*"
    },
    "drivers": [
        {
            "id": "squeezebox",
            "name": {
                "en": "Squeezebox"
            },
            "images": {
                "large": "./drivers/squeezebox/assets/images/large.jpg",
                "small": "./drivers/squeezebox/assets/images/small.jpg"
            },
            "class": "speaker",
            "capabilities": [
              "onoff",
              "speaker_playing",
              "speaker_next",
              "speaker_prev",
              "speaker_repeat",
              "speaker_shuffle",
              "volume_set"
            ],
            "pair": [
                {
                    "id": "start"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
        ],
        "actions": [
            {
                "id": "off",
                "title": {
                    "en": "Power off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "on",
                "title": {
                    "en": "Power on"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "volume",
                "title": {
                    "en": "Volume"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "placeholder": {
                            "en": "Which Squeezebox?"
                        },
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }, {
                        "name": "volume",
                        "type": "range",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "label": "%"
                    }
                ]
            },
            {
                "id": "play",
                "title": {
                    "en": "Play"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "playPlaylist",
                "title": {
                    "en": "Play Playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }, {
                        "name": "playlist",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "pause",
                "title": {
                    "en": "Pause"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "next",
                "title": {
                    "en": "Next song in playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "previous",
                "title": {
                    "en": "Previous song in playlist"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    }
                ]
            },
            {
                "id": "seek",
                "title": {
                    "en": "Go to second in current song"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:uk.co.icefusion.squeezebox&driver_id=squeezebox"
                    },
                    {
                        "name": "second",
                        "type": "number",
                        "placeholder" :
                        {
                            "en": "Second to jump to"
                        }
                  }
                ]
            }
        ]
    }
}
