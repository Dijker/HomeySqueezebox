{
    "id": "uk.co.icefusion.squeezebox2",
    "version": "0.1.0",
    "compatibility": ">=2.2.0",
    "sdk": 2,
    "name": {
        "en": "Squeezebox2"
    },
    "description": {
        "en": "Allows control of Squeezeboxes connected to a Logitech Media Server (LMS)."
    },
    "tags": {
      "en": ["squeezebox", "music", "logitech media server", "lms", "speaker"]
    },
    "author": {
        "name": "Mark Tudor",
        "email": "code@icefusion.co.uk"
    },
    "contributors": {
        "developers": [
            {
                "name": "Robin van Kekem",
                "email": "nl.inversion@gmail.com"
            }
        ]
    },
    "category": "music",
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "dependencies": {
        "squeezenode": "*",
        "node-fetch": "*"
    },
    "drivers": [
        {
            "id": "squeezebox",
            "name": {
                "en": "Squeezebox"
            },
            "images": {
                "large": "./drivers/squeezebox/assets/images/large.jpg",
                "small": "./drivers/squeezebox/assets/images/small.jpg"
            },
            "class": "speaker",
            "capabilities": [
              "speaker_playing",
              "speaker_next",
              "speaker_prev",
              "speaker_repeat",
              "speaker_shuffle",
              "volume_set",
              "volume_mute",
              "speaker_artist",
              "speaker_track",
              "speaker_album",
              "speaker_position",
              "speaker_duration"
            ],
            "pair": [
                {
                    "id": "start"
                }
            ]
        }
    ],
    "flow": {
        "actions": [
            {
                "id": "playPlaylist",
                "title": {
                    "en": "Play Playlist"
                },
                "hint": {
                    "en": "Select the playlist you'd like to play"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=squeezebox"
                    },
                    {
                        "name": "playlist",
                        "type": "autocomplete"
                    }
                ]
            }
        ]
    }
}
